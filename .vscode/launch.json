  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "bun",
      "args": ["run"],
      "request": "launch",
      "program": "index.ts",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Test Program",
      "type": "bun",
      "args": ["test"],
      "request": "launch",
      "program": "src/test/*.spec.ts",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
